= form_for @game, html: { role: "form" } do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: "form-control", placeholder: "Name"
  .form-group
    = f.label :start
    = f.text_field :start, class: "form-control", placeholder: "Game start"
  .form-group
    = f.label :registration_end
    = f.text_field :registration_end, class: "form-control", placeholder: "Registration end"

  = f.submit 'Save', class: "btn btn-default"
