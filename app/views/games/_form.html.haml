= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start
    = f.datetime_select :start
  .field
    = f.label :registration_end
    = f.datetime_select :registration_end
  .actions
    = f.submit 'Save'
